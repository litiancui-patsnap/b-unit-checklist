page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  font-size: 14px;
  color: #333;
}

.container {
  padding: 16px;
  padding-bottom: 40px;
}

.section {
  background-color: #fff;
  border-radius: 12px;
  padding: 18px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 17px;
  font-weight: 600;
  margin-bottom: 14px;
  color: #333;
  position: relative;
  padding-left: 10px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4px;
  height: 16px;
  background: linear-gradient(180deg, #1AAD19 0%, #13881a 100%);
  border-radius: 2px;
}

.btn-primary {
  background: linear-gradient(135deg, #1AAD19 0%, #13881a 100%);
  color: #fff;
  border-radius: 8px;
  padding: 12px 24px;
  text-align: center;
  margin: 10px 0;
  font-size: 15px;
  font-weight: 500;
  box-shadow: 0 4px 12px rgba(26, 173, 25, 0.2);
  border: none;
}

.btn-primary::after {
  border: none;
}

.btn-default {
  background-color: #fff;
  color: #666;
  border: 1.5px solid #e0e0e0;
  border-radius: 8px;
  padding: 12px 24px;
  text-align: center;
  margin: 10px 0;
  font-size: 15px;
  font-weight: 500;
}

.btn-default::after {
  border: none;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 8px;
  padding: 12px 24px;
  text-align: center;
  margin: 10px 0;
  font-size: 15px;
  font-weight: 500;
  border: none;
  opacity: 0.9;
}

.btn-danger::after {
  border: none;
}
